{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "lib": [
            "es6"
        ],
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "alwaysStrict": true,
        "removeComments": true,
        "outDir": "built/",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "decl/",
    },
    "exclude": [
        "node_modules",
        "built/",
        "decl/"
    ]
}